<script type="text/javascript">
  $( document ).ready(function() {
    $('.cpf').mask('999.999.999-99', {reverse: true});
    $('.date').mask('99/99/9999', {reverse: true});  
  });
</script>

<div id="owner_info" class="content-section-b">

  <div class="container">
    <div class="col-md-10 col-md-offset-1">
      <div class="row bs-wizard" style="border-bottom:0;">
        <div class="col-xs-2 bs-wizard-step complete">
          <div class="text-center bs-wizard-stepnum">1</div>
          <div class="progress"><div class="progress-bar"></div></div>
          <a href="#" class="bs-wizard-dot"></a>
          <div class="bs-wizard-info text-center">Dados básicos</div>
        </div>
        
        <div class="col-xs-2 bs-wizard-step complete"><!-- complete -->
          <div class="text-center bs-wizard-stepnum">2</div>
          <div class="progress"><div class="progress-bar"></div></div>
          <a href="#" class="bs-wizard-dot"></a>
          <div class="bs-wizard-info text-center">Sobre o veículo</div>
        </div>
        
        <div class="col-xs-2 bs-wizard-step complete"><!-- complete -->
          <div class="text-center bs-wizard-stepnum">3</div>
          <div class="progress"><div class="progress-bar"></div></div>
          <a href="#" class="bs-wizard-dot"></a>
          <div class="bs-wizard-info text-center">Uso do veículo</div>
        </div>
        
        <div class="col-xs-2 bs-wizard-step complete"><!-- active -->
          <div class="text-center bs-wizard-stepnum">5</div>
          <div class="progress"><div class="progress-bar"></div></div>
          <a href="#" class="bs-wizard-dot"></a>
          <div class="bs-wizard-info text-center">Condutor principal</div>
        </div>

        <div class="col-xs-2 bs-wizard-step complete"><!-- active -->
          <div class="text-center bs-wizard-stepnum">6</div>
          <div class="progress"><div class="progress-bar"></div></div>
          <a href="#" class="bs-wizard-dot"></a>
          <div class="bs-wizard-info text-center">Segurado</div>
        </div>

        <div class="col-xs-2 bs-wizard-step active"><!-- active -->
          <div class="text-center bs-wizard-stepnum">7</div>
          <div class="progress"><div class="progress-bar"></div></div>
          <a href="#" class="bs-wizard-dot"></a>
          <div class="bs-wizard-info text-center">Proprietário</div>
        </div>
      </div>
      <hr class="section-heading-spacer">
      <div class="clearfix"></div>
      <h2 class="section-heading">Proprietário</h2>
      <p class="bg-info">
        Proprietário do veículo é a pessoa que consta no documento do veículo.
      </p>
    </div>
    <%= simple_form_for(@quotation, url: wizard_path,  html: { class: 'form-horizontal' }) do |f| %>
      <div class="col-md-8 col-md-offset-2">
        <div class="well col-md-12">
          <%= f.input :owner_name %>
          <%= f.input :owner_cpf, :as => :string, input_html: { class: :cpf } %>
          <%= f.input :owner_email %>
          <%= f.input :owner_gender , as: :radio_buttons, collection: [['Masculino', 'Masculino'] ,['Feminino', 'Feminino']] %>
          <% unless f.object.owner_birth_date.nil? %>
            <%= f.input :owner_birth_date, :as => :string, input_html: { class: :date, :value => localize(f.object.owner_birth_date, format: "%d/%m/%Y") } %>
          <% else %>
            <%= f.input :owner_birth_date, :as => :string, input_html: { class: :date } %>
          <% end %>
          <%= f.input :owner_marital_status, collection: [ "Solteiro", "Casado ou união estável", "Separado", "Divorciado", "Viúvo"] %>
          
        </div>
        <div class="well col-xs-12">
          <%= f.button :submit, t("buttons.finish"), :class => "btn btn-primary pull-right" %>
        </div>
      </div>
      
    <% end %>
  </div>
</div>  